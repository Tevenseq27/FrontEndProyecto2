@model Presentacion.Models.RecorridoModel

@{
    ViewData["Title"] = "EditaRecorrido";
}

<h1>Modificación Recorrido</h1>

<h4>Ingrese los datos:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Modificar" asp-controller="Recorrido" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="IdRutaAsignada" class="control-label"></label>
                <br />
                @Html.DropDownList("Ruta", (List<SelectListItem>)ViewBag.Rutas)
            </div>

            <div class="form-group">
                <label asp-for="PlacaUnidadAsignada" class="control-label"></label>
                <br />
                @Html.DropDownList("Bus", (List<SelectListItem>)ViewBag.Buses)
            </div>

            <div class="form-group">
                <label asp-for="IdChoferAsignado" class="control-label"></label>
                <br />
                @Html.DropDownList("Chofer", (List<SelectListItem>)ViewBag.Choferes)
            </div>

            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoRecibido" class="control-label"></label>
                <input asp-for="MontoRecibido" class="form-control" />
                <span asp-validation-for="MontoRecibido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modificar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
